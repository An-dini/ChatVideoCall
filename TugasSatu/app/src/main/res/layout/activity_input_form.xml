<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".InputFormActivity">

<!--    title-->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:textColor="#2A2A2A"
        android:text="Form\nInput Nilai Mahasiswa"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    input nama mahasiswa-->
    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="64dp"
        android:textStyle="bold"
        android:text="Nama Mahasiswa"
        android:textColor="#2A2A2A"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/namaMhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="nama mahasiswa"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvNama"
        android:textColor="#2A2A2A"
        android:inputType="text"/>

<!--    input npm mahasiswa-->
    <TextView
        android:id="@+id/tvNpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="NPM Mahasiswa"
        android:textColor="#2A2A2A"
        app:layout_constraintTop_toBottomOf="@id/namaMhs"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/npmMhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="npm mahasiswa"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvNpm"
        android:textColor="#2A2A2A"
        android:inputType="text"/>

<!--    input nilai uts-->
    <TextView
        android:id="@+id/tvUts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="Nilai UTS"
        android:textColor="#2A2A2A"
        app:layout_constraintTop_toBottomOf="@id/npmMhs"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nilaiUts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="87.4"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvUts"
        android:textColor="#2A2A2A"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:maxLines="1"/>

    <!--    input nilai uas-->
    <TextView
        android:id="@+id/tvUas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="#2A2A2A"
        android:text="Nilai UAS"
        app:layout_constraintTop_toBottomOf="@id/nilaiUts"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nilaiUas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="80"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvUas"
        android:textColor="#2A2A2A"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:maxLines="1"/>

    <Button
        android:id="@+id/btKirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:textSize="16sp"
        android:backgroundTint="#3498DB"
        android:textColor="@color/white"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>