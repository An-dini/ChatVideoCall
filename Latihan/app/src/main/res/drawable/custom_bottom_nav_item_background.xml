<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#F28705" /> <!-- Orange fill color when selected -->
        </shape>
    </item>
    <!-- Default (unselected) state -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#F28705" android:width="2dp" /> <!-- Orange stroke when not selected -->
        </shape>
    </item>
</selector>
